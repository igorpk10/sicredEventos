<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:fitsSystemWindows="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".presentation.detail.EventDetailsFragment">

            <ImageView
                android:id="@+id/image"
                style="@style/Theme.Material3.DayNight"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/ic_error" />

            <TextView
                style="@style/TextAppearance.AppCompat.Body1"
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textStyle="bold"
                android:alpha="0.8"
                android:textSize="@dimen/abc_text_size_title_material"
                app:layout_constraintRight_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image"
                tools:text="TEXTO DE EXEMPLO" />

            <TextView
                style="@style/TextAppearance.AppCompat.Body2"
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:padding="16dp"
                android:textSize="14sp"
                app:layout_constraintRight_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/date"
                tools:text="woozle wuzzle johnny lunchpail municipal roundtable jebeditis knifey wifey menapplause electromicide invisible dog leash swishifying dead serious about boo-urns no ones pinching his legs works on contingency? mobilomobile onetuplet steamed hams ovulicious meh bathtub mint julep you are hearing me talk land cow johnny lunchpail capdabbler ha ha! dumbening basegame holy flurking schnit stabby knifey wifey faxtrola fancy store-bought dirt deceleratrix rock and/or roll chestal crantastic delicious caulk smendler just like in real life banana kaboom cromulent faxtrola horse with a head of a rabbit and the body of a rabbit pinnitchy-o jumping box my children need wine gamblor lard-ho one way passage to the boneyard diddly menu boy zuh beginulate rail = rail milhousing tubby low-income nobodies it works just like regular money, but it's fun money fight glavin chazwazers catsup d'oh! i need the biggest seed bell you have retirony megacide retirony four minutes. jiminy jillikers dollareydoos bachelor arms" />

            <TextView
                style="@style/TextAppearance.AppCompat.Display1"
                android:id="@+id/value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:padding="16dp"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="@dimen/abc_text_size_title_material"
                android:textStyle="bold"
                app:layout_constraintRight_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/description"
                tools:text="Valor: R$ 20,99" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        fab:menu_animationDelayPerItem="50"
        fab:menu_backgroundColor="@android:color/transparent"
        fab:menu_buttonSpacing="0dp"
        fab:menu_colorNormal="@color/purple_500"
        fab:menu_colorPressed="@color/purple_700"
        fab:menu_colorRipple="#99FFFFFF"
        fab:menu_fab_size="normal"
        fab:menu_icon="@drawable/fab_add"
        fab:menu_openDirection="up"
        fab:menu_shadowColor="#66000000"
        fab:menu_shadowRadius="4dp"
        fab:menu_shadowXOffset="1dp"
        fab:menu_shadowYOffset="3dp"
        fab:menu_showShadow="true">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_share"
            app:fab_colorNormal="@color/purple_500"
            app:fab_colorPressed="@color/purple_700"
            app:fab_colorRipple="#99FFFFFF"
            app:fab_shadowColor="#66000000"
            app:fab_shadowRadius="4dp"
            app:fab_shadowXOffset="1dp"
            app:fab_shadowYOffset="3dp"
            app:fab_showShadow="true"
            app:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check"
            app:fab_colorNormal="@color/purple_500"
            app:fab_colorPressed="@color/purple_700"
            app:fab_colorRipple="#99FFFFFF"
            app:fab_shadowColor="#66000000"
            app:fab_shadowRadius="4dp"
            app:fab_shadowXOffset="1dp"
            app:fab_shadowYOffset="3dp"
            app:fab_showShadow="true"
            app:fab_size="mini" />
    </com.github.clans.fab.FloatingActionMenu>

</androidx.constraintlayout.widget.ConstraintLayout>